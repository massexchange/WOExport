<div id="login">
    <img id="login-logo" src="app/img/logo.png">

    <form class="form-signin" id="login-form" method="POST">
        <input type="text" placeholder="Username" id="txtUser" class="login-input">
        <input type="password" placeholder="Password" id="txtPass" class="login-input">

        <input id="login-button" type="submit" value="LOGIN">
        <div id="response" class="error"></div>
    </form>
</div>
